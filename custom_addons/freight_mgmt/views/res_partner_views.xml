                <field name="mode">primary</field>
                <field eval="1" name="priority"/>
                <field name="arch" type="xml">
                        <xpath expr="//field[@name='category_id']" position="attributes">
                            <attribute name="invisible">1</attribute>
                        </xpath>
                </field>
        </record>

