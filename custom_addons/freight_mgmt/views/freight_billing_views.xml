<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    
    <record id="freight_billing_view_search" model="ir.ui.view">
        <field name="name">freight.billing.view.search</field>
        <field name="model">freight.billing</field>
        <field name="arch" type="xml">
            <search>
                <field name="number" />
                <field name="user_id" />
                <field name="partner_id" />
                <field name="name" />
                <field name="stage_id" />
                <filter
                    string="My Billings"
                    name="my_bookings"
                    domain="[('user_id','=',uid)]"
                />
                <separator />
                <group expand="0" string="Group By">
                    <!--
                    <filter
                        string="Partner"
                        name="group_partner"
                        domain="[]"
                        context="{'group_by':'partner_id'}"
                    />
                    <filter
                        string="Team"
                        name="group_team"
                        domain="[]"
                        context="{'group_by':'team_id'}"
                    />
                    -->
                    <filter
                        string="User"
                        name="group_user"
                        domain="[]"
                        context="{'group_by':'user_id'}"
                    />
                    <filter
                        string="Stage"
                        name="group_stage"
                        domain="[]"
                        context="{'group_by':'stage_id'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="freight_billing_view_form" model="ir.ui.view">
        <field name="name">freight.billing.view.form</field>
        <field name="model">freight.billing</field>
        <field name="arch" type="xml">
            <form string="Freight Billing">
                <header>
                    <button
                        string="Assign to me"
                        name="assign_to_me"
                        type="object"
                        attrs="{'invisible' : [('user_id', '!=', False)]}"
                    />
                    <field
                        name="stage_id"
                        widget="statusbar"
                        options="{'clickable': '1', 'fold_field': 'fold'}"
                    />
                </header>
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1 class="oe_title">
                            <field name="name" placeholder="Title..." />
                        </h1>
                        <h2 class="o_row">
                            <field name="number" placeholder="Booking number..." />
                        </h2>
                    </div>
                    <group name="main">
                        <group>
                            <field name="active" invisible="1" />
                            <field name="transport_type" />
                            <field name="user_id" />
                            <field name="port_loading_id" />
                            <field
                                name="company_id"
                                options="{'no_create': True}"
                                groups="base.group_multi_company"
                            />
                            <field name="vessel_id" />
                            <field name="shipping_line" />
                            <field name="commodity" />
                            <field name="quantity" />
                            <field name="create_date" readonly="1" />
                        </group>
                        <group>
                            <field name="shipment_type" />
                            <field name="partner_id" />
                            <field name="port_discharge_id" />
                            <field name="etd"/>
                            <field name="voyage_number" />
                            <field name="temperature"/>
                            <field name="ventilation" />
                        </group>
                    </group>
                    <group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" widget="html" />
                            </page>
                            <page string="Other Information" name="other_info">
                                <group>
                                    <field name="last_stage_update" readonly="1" />
                                    <field name="issued_date" readonly="1" />
                                    <field name="approved_date" readonly="1" />
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field
                        name="message_ids"
                        widget="mail_thread"
                        options="{'post_refresh': 'recipients', 'open_attachments': True}"
                    />
                </div>
            </form>
        </field>
    </record>
    <record id="freight_billing_view_tree" model="ir.ui.view">
        <field name="name">freight.billing.view.tree</field>
        <field name="model">freight.billing</field>
        <field name="arch" type="xml">
            <tree>
                <field name="number" />
                <field name="name" />
                <field name="transport_type" />
                <field name="shipment_type" />
                <field name="user_id" />
                <field name="stage_id" />
                <field name="port_discharge_id" />
                <field name="vessel_id" />
                <field name="last_stage_update" />
            </tree>
        </field>
    </record>
    <record id="view_freight_billing_kanban" model="ir.ui.view">
        <field name="name">freight.billing.kanban</field>
        <field name="model">freight.billing</field>
<!--        <field name="priority" eval="100" />-->
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="stage_id">
                <field name="number" />
                <field name="active" />
                <field name="name" />
                <field name="user_id" />
                <field name="color" />
                <field name="stage_id" />
                <field name="issued_date" />
                <progressbar
                    field="activity_state"
                    colors="{&quot;planned&quot;: &quot;success&quot;, &quot;today&quot;: &quot;warning&quot;, &quot;overdue&quot;: &quot;danger&quot;}"
                />
                <templates>
                    <t t-name="kanban-box">
                        <div
                            t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_content oe_kanban_global_click"
                        >
                            <div
                                class="o_dropdown_kanban dropdown"
                                groups="base.group_user"
                            >
                                <a
                                    class="dropdown-toggle btn"
                                    role="button"
                                    data-toggle="dropdown"
                                    href="#"
                                    title="Toggle dropdown"
                                >
                                    <span class="fa fa-ellipsis-v" aria-hidden="true" />
                                </a>
                                <ul
                                    class="dropdown-menu"
                                    role="menu"
                                    aria-labelledby="dLabel"
                                >
                                    <li t-if="widget.editable">
                                        <a type="edit">Edit</a>
                                    </li>
                                    <li t-if="widget.deletable">
                                        <a type="delete">Delete</a>
                                    </li>
                                    <li class="divider" />
                                    <li>
                                        <ul
                                            class="oe_kanban_colorpicker"
                                            data-field="color"
                                        />
                                    </li>
                                </ul>
                            </div>
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <field name="name" />
                                    <div class="o_kanban_record_title text-muted">
                                        <field name="number"  />
                                    </div>
                                    <div class="o_kanban_record_subtitle text-muted">
                                        <field name="vessel_id" />
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body" />
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
<!--                                    <field name="priority" widget="priority" />-->
                                    <field
                                        name="activity_ids"
                                        widget="kanban_activity"
                                        related="activity_state"
                                    />
                                </div>
                                <div class="oe_kanban_bottom_right">
<!--                                    <field-->
<!--                                        name="kanban_state"-->
<!--                                        widget="state_selection"-->
<!--                                    />-->
                                    <field name="activity_state" invisible="1" />
                                    <img
                                        t-att-src="kanban_image('res.users', 'image_128', record.user_id.raw_value)"
                                        t-att-title="record.user_id.value"
                                        width="24"
                                        height="24"
                                        class="oe_kanban_avatar o_image_24_cover float-right"
                                        t-att-alt="record.user_id.value"
                                    />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
