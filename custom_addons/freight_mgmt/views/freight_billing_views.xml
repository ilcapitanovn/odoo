                    string="My Bills"
                    name="my_bookings"
                    domain="[('user_id','=',uid)]"
                />
                <separator />
                <group expand="0" string="Group By">
                    <!--
                    <filter
                        string="Partner"
                        name="group_partner"
                        domain="[]"
                        context="{'group_by':'partner_id'}"
                    />
                    <filter
                        string="Team"
                        name="group_team"
                        domain="[]"
