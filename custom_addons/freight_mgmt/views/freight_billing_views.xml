                    />
                    -->
                    <filter
                        string="User"
                        name="group_user"
                        domain="[]"
                        context="{'group_by':'user_id'}"
                    />
                    <filter
                        string="Customer"
                        name="group_customer"
                        domain="[]"
                        context="{'group_by':'partner_id'}"
                    />
<!--                    <filter-->
<!--                        string="Branch"-->
