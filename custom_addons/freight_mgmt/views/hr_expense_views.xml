<?xml version="1.0"?>
<odoo>
        <record id="freight_hr_expense_view_form_inherit" model="ir.ui.view">
                <field name="name">freight.hr.expense.view.form.inherited</field>
                <field name="model">hr.expense</field>
                <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
                <field name="arch" type="xml">
                        <xpath expr="//field[@name='reference']" position="attributes">
                                <attribute name="string">Invoice Reference</attribute>
                        </xpath>
                        <xpath expr="//field[@name='account_id']" position="attributes">
                                <attribute name="string">Invoice Reference</attribute>
                        </xpath>
                        <xpath expr="//field[@name='product_id']" position="attributes">
                                <attribute name="string">Category</attribute>
                        </xpath>
                        <xpath expr="//field[@name='tax_ids']" position="after">
                            <field name="billing_id" options="{'no_create': True, 'no_create_edit': True}"
                                   context="{'display_by': 'name_and_vessel_bol_number'}"/>
                            <field name="related_partner_id" />
                        </xpath>
                </field>
        </record>

        <record id="freight_hr_expense_view_tree_inherit" model="ir.ui.view">
                <field name="name">freight.hr.expense.view.tree.inherited</field>
                <field name="model">hr.expense</field>
                <field name="inherit_id" ref="hr_expense.hr_expense_view_expenses_analysis_tree"/>
                <field name="arch" type="xml">
                        <xpath expr="//field[@name='payment_mode']" position="after">
                            <field name="billing_id" invisible="1" />
                            <field name="vessel_bol_number" />
                        </xpath>
                        <xpath expr="//field[@name='product_id']" position="attributes">
                                <attribute name="string">Category</attribute>
                        </xpath>
                </field>
        </record>
</odoo>