<odoo>
    <record id="dashboard_configuration_update_wizard_form" model="ir.ui.view">
        <field name="name">dashboard.configuration.update.wizard.form</field>
        <field name="model">dashboard.configuration.update.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="filter">
                    <group name="date_range" colspan="2">
                        <group>
                            <field name="x_date_range" />
                        </group>
                        <group>
                            <field name="x_compared_to" />
                        </group>
                    </group>
                </group>
                <footer>
                    <button
                        name="action_update"
                        string="Update"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
